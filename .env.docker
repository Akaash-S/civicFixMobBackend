# CivicFix Backend - Docker Environment Template
# Copy this to .env and update with your actual AWS credentials

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production

# AWS RDS Database (REQUIRED)
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/database_name

# AWS Configuration (REQUIRED)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# Firebase Configuration (REQUIRED)
FIREBASE_SERVICE_ACCOUNT_B64=your-base64-encoded-firebase-service-account
FIREBASE_PROJECT_ID=your-firebase-project-id

# Optional Configuration
CORS_ORIGINS=*
SKIP_VALIDATION=false
RUN_MIGRATION=false